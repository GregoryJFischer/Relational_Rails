<h1>Musicians belonging to <%=@orchestra.name%></h1>

<% @orchestra.musicians.each do |musician| %>
  <a href="/musicians/<%= musician.id %>"><%= musician.name %></a><br/>
  <ul>
    <li>Is looking for work: <%= musician.hirable %></li>
    <li>Age: <%= musician.age %></li>
  </ul>
  <br/><br/>
<% end %>

