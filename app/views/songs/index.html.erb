<h1>Songs</h1>

<nav>
  <a href="/">Home</a> |
  <a href="/orchestras/">Orchestras</a> |
  <a href="/musicians/">Musicians</a> |
  <a href="/composers/">Composers</a> |
  <a href="/songs/">Songs</a> |
  <a href="/songs/new">New Song</a> |
  <a href="/songs?order=true">Sort by Name</a>
</nav><br/>

<%= form_with url: "/songs?modern=true", method: :get, local: true do |form| %>
  <%= form.label :year, "Limit Results to More Recent than Year:"%>
  <%= form.text_field :year %>
  <%= form.submit "Submit" %>
<% end %>

<% @songs.each do |song| %>
  <a href="/songs/<%= song.id %>"><%= song.name %></a> |
  <a href="/songs/<%=song.id%>/edit">Edit</a>
  <br/>
  <ul>
    <li>Is public_domain: <%= song.public_domain %></li>
    <li>Composed in: <%= song.year_composed %></li>
  </ul>
  <%= form_with url: "/songs/#{song.id}", method: :delete, local: true do |form|%>
    <%= form.submit "Delete"%>
  <% end %><br/><br/>
<% end %>